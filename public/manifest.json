{
  "manifest_version": 2,

  "name": "WebDetox",
  "description": "Noise Control Chrome Extension",
  "version": "1.0",

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
   "128": "icon128.png"
  },

  "browser_action": {
    "default_icon": "icon.png"
  },

  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["js/content_script.js"],
          "run_at": "document_start"
      }
  ],

  "background": {
    "scripts": ["js/background.js"]
  },

  "permissions": [
    "<all_urls>"
  ]
}